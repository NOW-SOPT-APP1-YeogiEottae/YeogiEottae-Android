<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="30dp"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Yeogieotte.Pretendard_b4"
        android:text="정말 삭제하시겠어요?"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_no"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@color/gray_400"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delete"
        app:layout_constraintEnd_toStartOf="@id/btn_yes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textAppearance="@style/TextAppearance.Yeogieotte.Pretendard_h4"
        android:textColor="@color/gray_850"
        app:layout_constraintTop_toTopOf="@id/btn_no"
        app:layout_constraintEnd_toEndOf="@id/btn_no"
        app:layout_constraintBottom_toBottomOf="@id/btn_no"
        app:layout_constraintStart_toStartOf="@id/btn_no"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_yes"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:background="@color/secondary_600"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textAppearance="@style/TextAppearance.Yeogieotte.Pretendard_h4"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn_yes"
        app:layout_constraintEnd_toEndOf="@id/btn_yes"
        app:layout_constraintBottom_toBottomOf="@id/btn_yes"
        app:layout_constraintStart_toStartOf="@id/btn_yes"/>

</androidx.constraintlayout.widget.ConstraintLayout>