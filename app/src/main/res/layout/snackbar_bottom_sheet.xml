<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_bg_snackber"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="110dp"
        android:background="@color/gray_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/YeogiRound20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5개까지 추가할 수 있어요"
        android:textAppearance="@style/TextAppearance.Yeogieotte.Pretendard_b3"
        android:textColor="@color/gray_0"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_snackber"
        app:layout_constraintEnd_toEndOf="@id/iv_bg_snackber"
        app:layout_constraintStart_toStartOf="@id/iv_bg_snackber"
        app:layout_constraintTop_toTopOf="@id/iv_bg_snackber" />

</androidx.constraintlayout.widget.ConstraintLayout>