<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_hoteloff_snackbar_bg"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_snackbar_hotel_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hoteloff_snackbar_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="24dp"
        android:text="@string/favorite_hotel_off"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_hoteloff_snackbar_bg"
        app:layout_constraintStart_toStartOf="@id/iv_hoteloff_snackbar_bg"
        app:layout_constraintTop_toTopOf="@id/iv_hoteloff_snackbar_bg" />

    <TextView
        android:id="@+id/tv_hoteloff_snackbar_undo_favorite"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/undo"
        android:textColor="@color/brand"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_hoteloff_snackbar_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_hoteloff_snackbar_bg"
        app:layout_constraintTop_toTopOf="@id/iv_hoteloff_snackbar_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>